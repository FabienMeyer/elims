# Database Configuration
MARIADB_ROOT_PASSWORD=your_secure_root_password_here
MARIADB_DATABASE=elims
MARIADB_USER=elims_user
MARIADB_PASSWORD=your_secure_password_here
MARIADB_HOST=mariadb
MARIADB_PORT=3306

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# Backend Configuration
BACKEND_SECRET_KEY=your_secret_key_min_32_characters_long_change_this
BACKEND_ALGORITHM=HS256
BACKEND_ACCESS_TOKEN_EXPIRE_MINUTES=30
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# MQTT Configuration
MQTT_HOST=mosquitto
MQTT_PORT=8883
MQTT_USERNAME=mqtt_user
MQTT_PASSWORD=your_mqtt_password_here

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_grafana_password_here

# Loki Configuration
LOKI_PORT=3100

# Project Configuration
PROJECT_NAME=ELIMS
STACK_NAME=elims

# Domain Configuration
DOMAIN=localhost
# For production use your domain: DOMAIN=example.com
# For local testing with subdomains: DOMAIN=localhost.tiangolo.com

# Traefik Configuration (for production deployment)
EMAIL=admin@example.com
# Generate hashed password with: openssl passwd -apr1 YOUR_PASSWORD
# Then replace $ with $$ for Docker Compose: $$apr1$$salt$$hash
HASHED_PASSWORD=$$apr1$$XXXXXXXX$$XXXXXXXXXXXXXXXXXXXX

# Environment
ENVIRONMENT=development
